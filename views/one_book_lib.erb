<div class="container">
  <h1><%= @book.title %></h1>
  <h3>Authors:</h3>
  <% @book.authors.each() do |author| %>
    <h4><%= author['name'] %></h4>
  <% end %>
  <h2>Update this book</h2>
  <form action="/books/<%= @book.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group">
      <label for="title">Update book title</label>
      <input type="text" name="update_title">
    </div>
    <div class="form-group">
      <label for="author">Update book author</label>
      <input type="text" name="update_author">
    </div>
    <button type="submit">Update book!</button>
  </form>
</div>
<br>
<div class="container">
  <h2>Delete this book</h2>
  <form action="/books" method="post">
    <input type="hidden" name="id" value="<%= @book.id %>">
    <input type="hidden" name="_method" value="delete">

    <button type="submit">Delete this book!</button>
  </form>
</div>
<div class="container">
  <h2>Remove an author from this book</h2>
  <form action="/books/<%= @book.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <select name='author_id'>
      <% @book.authors.each() do |author| %>
        <option value='<%=author['id']%>'><%=author['name']%></option>
      <% end %>
    </select>
    <button type="submit">Remove author</button>
  </form>
  <br>
  <a href="/" class='btn btn-success'>Return To Home</a>
</div>
